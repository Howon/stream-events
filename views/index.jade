  script(type = 'text/javascript', src = '/javascripts/sources/geocoder_min.js')
  script(type = 'text/javascript', src = '/javascripts/pages/main/home.js')
  script(type = 'text/javascript', src = '/javascripts/pages/main/map_control.js')










